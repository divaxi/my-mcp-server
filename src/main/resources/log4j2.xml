<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Ghi log vào file -->
        <File name="FileLogger" fileName="model-context-protocol/log/mcp-stdio-server.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c{1} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Log toàn hệ thống -->
        <Root level="info">
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>


